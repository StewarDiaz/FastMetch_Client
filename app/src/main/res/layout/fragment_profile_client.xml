<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileClientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/ivPictProfClient"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="105dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameProfileClient"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/unlock"
            android:hint="Nombre"
            android:textSize="20dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surnameProfileClient"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/unlock"
            android:hint="Apellido"
            android:textSize="20dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/identificationProfileClient"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="320dp"
            android:fontFamily="@font/unlock"
            android:hint="Identificacion"
            android:textSize="20dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/genderProfileClient"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="320dp"
            android:fontFamily="@font/unlock"
            android:hint="Genero"
            android:textSize="20dp" />

    </RelativeLayout>



</FrameLayout>